{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@shared/*": ["shared/*"],
    }
  },
  "include": [
    "apps/src/**/*.ts",
    "shared/src/**/*.ts",
    "apps/src/**/*.d.ts",
    "shared/src/**/*.d.ts",
    "apps/src/**/*.tsx",
    "shared/src/**/*.tsx",
    "apps/src/**/*.vue",
    "shared/src/**/*.vue",
    "apps/types/**/*.d.ts",
    "shared/types/**/*.d.ts",
    "apps/types/**/*.ts",
    "shared/types/**/*.ts",
    "apps/build/**/*.ts",
    "shared/build/**/*.ts",
    "apps/build/**/*.d.ts",
    "shared/build/**/*.d.ts",
    "apps/mock/**/*.ts",
    "shared/mock/**/*.ts",
    "apps/vite.config.ts",
    "shared/vite.config.ts"
  ],
  "exclude": ["node_modules", "apps/tests/**/*.ts", "apps/src/**/*.test.ts", "apps/src/**/*.spec.ts", "shared/tests/**/*.ts", "shared/src/**/*.test.ts", "shared/src/**/*.spec.ts"
  ]
}